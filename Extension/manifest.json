{
  "manifest_version": 2,

  "name": "CYSCE",
  "description": "CYS Chrome Extension",
  "version": "0.2",

  "icons": {
    "16": "cysicon-16.png",
    "32": "cysicon-32.png",
    "48": "cysicon-48.png",
    "128": "cysicon-128.png"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [{
    "matches": ["http://chooseyourstory.com/*"],
    "exclude_matches": ["http://chooseyourstory.com/story/viewer/*"],
    "js": [
      "js/jquery.js",
      "codemirror/lib/codemirror.js", "codemirror/addon/edit/closebrackets.js", "codemirror/addon/edit/closetag.js", "codemirror/addon/mode/overlay.js", "codemirror/addon/mode/simple.js", "codemirror/mode/css/css.js", "codemirror/mode/javascript/javascript.js", "codemirror/mode/xml/xml.js", "codemirror/mode/htmlmixed/htmlmixed.js", "codemirror/mode/markdown/markdown.js",
      "js/window.js"
    ],
    "css": ["themes/notheme.css", "codemirror/lib/codemirror.css", "codemirror/theme/bespin.css"],
    "run_at": "document_start"
  }, {
    "matches": ["http://chooseyourstory.com/*"],
    "exclude_matches": ["http://chooseyourstory.com/story/viewer/*"],
    "js": ["js/navbar.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/Games/Search.aspx*"],
    "js": ["js/moment.js", "js/storylist.js"],
    "css": ["storylist.css"]
  }, {
    "matches": ["http://chooseyourstory.com/forums/*/message/*"],
    "js": ["js/thread.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/forums/*/edit-post*", "http://chooseyourstory.com/forums/*/new-post*", "http://chooseyourstory.com/forums/*/new-reply*"],
    "js": ["js/reply.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/Member/*"],
    "js": ["js/member.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/my/", "http://chooseyourstory.com/My/", "http://chooseyourstory.com/my/default.aspx*", "http://chooseyourstory.com/My/default.aspx*"],
    "js": ["js/mystuff.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/My/Games.aspx"],
    "js": ["js/rating.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/my/notepad"],
    "js": ["js/notepad.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/My/Profile.aspx"],
    "js": ["js/preferences.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/new-user"],
    "js": ["js/login.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/my/adveditor/properties.aspx*", "http://chooseyourstory.com/My/adveditor/properties.aspx*", "http://chooseyourstory.com/my/adveditor/default.aspx*", "http://chooseyourstory.com/My/adveditor/default.aspx*"],
    "js": ["js/adveditor.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/my/adveditor/pagePopup.asp*", "http://chooseyourstory.com/My/adveditor/pagePopup.asp*"],
    "js": ["js/htmleditor.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/my/adveditor/ScriptPopup.aspx*", "http://chooseyourstory.com/My/adveditor/ScriptPopup.aspx*"],
    "js": ["js/scripteditor.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/story/*"],
    "exclude_matches": ["http://chooseyourstory.com/story/viewer/*"],
    "js": ["js/an.js"],
    "run_at": "document_end"
  }, {
    "matches": ["http://chooseyourstory.com/story/viewer/*"],
    "js": ["js/jquery.js", "js/storygame-dev.js"],
    "css": ["storygame-dev.css"],
    "run_at": "document_end"
  }],

  "permissions": [
    "activeTab",
    "storage"
  ],

  "web_accessible_resources": [
    "html/*.html",
    "themes/*.css",
    "themes/fonts/*.otf",
    "themes/fonts/*.ttf",
    "themes/fonts/*.woff",
    "themes/fonts/*.woff2",
    "themes/images/*.png",
    "themes/images/*.svg"
  ]
}
